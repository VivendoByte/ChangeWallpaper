<Window x:Class="ChangeWallpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChangeWallpaper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox FontSize="20" Text="" Margin="8,8,8,0" x:Name="txtImagePath" />
        <Button Content="CHANGE" Margin="8" FontSize="20" x:Name="btnChangeWallpaper" Click="btnChangeWallpaper_Click" />
    </StackPanel>
</Window>
